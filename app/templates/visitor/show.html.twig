{% extends 'base.html.twig' %}

{% block title %}Visitor{% endblock %}

{% block body %}
    <h1>Visitor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visitor.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ visitor.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ visitor.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ visitor.email }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ visitor.token }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ visitor.profession }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ visitor.phone }}</td>
            </tr>
            <tr>
                <th>Rgpd</th>
                <td>{{ visitor.rgpd ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('visitor_index') }}">back to list</a>

    <a href="{{ path('visitor_edit', {'id': visitor.id}) }}">edit</a>

    {{ include('visitor/_delete_form.html.twig') }}
{% endblock %}
